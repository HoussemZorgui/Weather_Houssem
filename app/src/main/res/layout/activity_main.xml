<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    style="@style/Widget.Material3.DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".framework.ui.main.MainActivity">

        <Button
            android:id="@+id/menuButton"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:icon="@drawable/menu_icon"
            app:iconGravity="textStart"
            app:iconSize="40dp"
            app:layout_constraintBottom_toTopOf="@+id/swiperefresh"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.search.SearchBar
            android:id="@+id/citySearcher"
            style="@style/Widget.Material3.SearchBar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:hint="@string/search_hint"
            app:layout_constraintEnd_toStartOf="@+id/gpsButton"
            app:layout_constraintStart_toEndOf="@+id/menuButton"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/gpsButton"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/gps_button_description"
            app:icon="@drawable/my_location_icon"
            app:iconGravity="textStart"
            app:iconSize="40dp"
            app:layout_constraintBottom_toTopOf="@+id/swiperefresh"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.search.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_anchor="@id/citySearcher"
            tools:layout_editor_absoluteY="8dp"
            tools:visibility="gone">
            <!-- Search suggestions/results go here (ScrollView, RecyclerView, etc.). -->
        </com.google.android.material.search.SearchView>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swiperefresh"
            android:layout_width="0dp"
            android:layout_height="480dp"
            android:elevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/citySearcher"
            tools:visibility="invisible">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/principalCardView"
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/principal_card_background"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cityName">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/currentTemp"
                        android:layout_width="208dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/card_text"
                        android:textSize="96sp"
                        tools:text="22ยบ" />

                    <ImageView
                        android:id="@+id/currentImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:layout_marginEnd="5dp"
                        android:contentDescription="@string/Icon_weather_description"
                        tools:srcCompat="@tools:sample/avatars" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/thermal_sensation"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            android:textColor="@color/card_text"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tempFeelsLike"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text=""
                            android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
                            android:textColor="@color/card_text"
                            tools:text="22ยบ" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/humidity"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            android:textColor="@color/card_text"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/humidityPercentage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text=""
                            android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
                            android:textColor="@color/card_text"
                            tools:text="22%" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/wind"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            android:textColor="@color/card_text"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/windVelocity"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text=""
                            android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
                            android:textColor="@color/card_text"
                            tools:text="2 m/s" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/cityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text=""
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            app:layout_constraintBottom_toTopOf="@+id/principalCardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/citySearcher"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Madrid, ES" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="3dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/principalCardView">

            <TextView
                android:id="@+id/next4Days"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_gravity="top"
                android:layout_marginStart="15dp"
                android:gravity="bottom"
                android:text="@string/next_4_days"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/nextDayInfo1"
                        style="@style/Widget.Material3.CardView.Elevated"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="7dp"
                        android:layout_marginVertical="14dp"
                        app:cardBackgroundColor="@color/first_day_card_background">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/nextDay1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/card_text"
                                android:textSize="18sp"
                                tools:text="Monday" />

                            <ImageView
                                android:id="@+id/nextDayImage1"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="3"
                                android:contentDescription="@string/next_day_icon"
                                tools:srcCompat="@tools:sample/avatars" />

                            <TextView
                                android:id="@+id/nextDayTemp1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_margin="5dp"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/card_text"
                                android:textSize="34sp"
                                tools:text="22ยบ" />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/nextDayInfo2"
                        style="@style/Widget.Material3.CardView.Elevated"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="7dp"
                        android:layout_marginVertical="14dp"
                        app:cardBackgroundColor="@color/second_day_card_background">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/nextDay2"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/card_text"
                                android:textSize="18sp"
                                tools:text="Tuesday" />

                            <ImageView
                                android:id="@+id/nextDayImage2"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="3"
                                android:contentDescription="@string/next_day_icon"
                                tools:srcCompat="@tools:sample/avatars" />

                            <TextView
                                android:id="@+id/nextDayTemp2"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_margin="5dp"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/card_text"
                                android:textSize="34sp"
                                tools:text="22ยบ" />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/nextDayInfo3"
                        style="@style/Widget.Material3.CardView.Elevated"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="7dp"
                        android:layout_marginVertical="14dp"
                        app:cardBackgroundColor="@color/third_day_card_background">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/nextDay3"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/card_text"
                                android:textSize="18sp"
                                tools:text="Wednesday" />

                            <ImageView
                                android:id="@+id/nextDayImage3"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="3"
                                android:contentDescription="@string/next_day_icon"
                                tools:srcCompat="@tools:sample/avatars" />

                            <TextView
                                android:id="@+id/nextDayTemp3"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_margin="5dp"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/card_text"
                                android:textSize="34sp"
                                tools:text="22ยบ" />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/nextDayInfo4"
                        style="@style/Widget.Material3.CardView.Elevated"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="7dp"
                        android:layout_marginVertical="14dp"
                        app:cardBackgroundColor="@color/fourth_day_card_background">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/nextDay4"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/card_text"
                                android:textSize="18sp"
                                tools:text="Thursday" />

                            <ImageView
                                android:id="@+id/nextDayImage4"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="3"
                                android:contentDescription="@string/next_day_icon"
                                tools:srcCompat="@tools:sample/avatars" />

                            <TextView
                                android:id="@+id/nextDayTemp4"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_margin="5dp"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/card_text"
                                android:textSize="34sp"
                                tools:text="22ยบ" />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

        <TextView
            android:id="@+id/specialMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/sidePanel"
        layout="@layout/side_panel" />

</androidx.drawerlayout.widget.DrawerLayout>